<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/royalblue" />
                    <corners android:radius="8dp" />
                </shape>
            </item>

            <item android:drawable="@drawable/woman" android:gravity="center" android:width="200dp" android:height="200dp" />
        </layer-list>
    </item>

    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/blackblue" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/woman" android:gravity="center" android:width="200dp" android:height="200dp"/>
        </layer-list>
    </item>
</selector>
