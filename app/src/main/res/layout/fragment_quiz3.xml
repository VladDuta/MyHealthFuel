<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackblue"
    tools:context=".authentication.quiz.Quiz1Fragment">

    <TextView
        android:id="@+id/textViewQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="What is your activity level?"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/radioGroupActivityLevel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
   />

    <RadioGroup
        android:id="@+id/radioGroupActivityLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewQuiz"
        android:layout_marginTop="30dp">

        <RadioButton
            android:id="@+id/radiobuttonSedentaryActive"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="@drawable/background_radio_button"
            android:button="@null"
            android:text="Sedentary"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radiobuttonLowActive"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_radio_button"
            android:button="@null"
            android:text="Low Active"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radiobuttonActive"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_radio_button"
            android:button="@null"
            android:text="Active"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radiobuttonVeryActive"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_radio_button"
            android:button="@null"
            android:text="Very Active"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp" />


    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>